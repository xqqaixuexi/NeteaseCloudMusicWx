<!--pages/component/login/login.wxml-->
<view class="form-common">
    <form bindsubmit="login">
        <view class="formc-cnt">
            <text>账号：</text>
            <input type="number" bindinput="inputValue" data-type="1"  maxlength="11" placeholder="手机号" focus="true"></input>        
        </view>
        <view class="formc-cnt">
            <text>密码：</text>
            <input type="password" bindinput="inputValue" data-type="2"></input>        
        </view> 
        <view>
            <button  form-type="submit">登录</button>
        </view>      
    </form>
</view>